{
  "name": "seal-code",
  "version": "1.0.0",
  "description": "海豹骰插件，提供文本和海豹码的互相转换。",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/JustAnotherID/just-another-seal-mod-repo/tree/master/js/seal-code",
  "license": "MIT",
  "keywords": [
    "sealdice",
    "plugin"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production node tools/build.js",
    "build-dev": "cross-env NODE_ENV=dev node tools/build.js"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.6",
    "esbuild": "^0.17.4",
    "lodash-es": "^4.17.21",
    "pako": "^2.1.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "fs-extra": "^11.1.0",
    "source-map-support": "^0.5.21"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
