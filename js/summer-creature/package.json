{
  "name": "summer-creature",
  "version": "2.0.0-alpha",
  "description": "海豹骰插件，为群里提供夏季生物活动。",
  "type": "module",
  "main": "build/index.js",
  "typings": "build/index.d.ts",
  "repository": "https://github.com/JustAnotherID/just-another-seal-mod-repo/js/summer-creature",
  "license": "MIT",
  "keywords": [
    "sealdice",
    "plugin"
  ],
  "scripts": {
    "res:build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript -w",
    "build": "cross-env NODE_ENV=production node tools/Build.res.js",
    "build-dev": "cross-env NODE_ENV=dev node tools/Build.res.js"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@rescript/core": "^1.5.2",
    "cron-schedule": "^5.0.1",
    "dayjs": "^1.11.11",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.5",
    "fs-extra": "^11.2.0",
    "rescript": "^11.1.2",
    "source-map-support": "^0.5.21"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "!**/*.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
